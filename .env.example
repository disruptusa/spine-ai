# ==============================================
# SPINE.AI ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# ==============================================
# SUPABASE CONFIGURATION
# ==============================================
# Get these from your Supabase project settings
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_public_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database connection (optional - Supabase provides this)
# DATABASE_URL=postgresql://username:password@localhost:5432/spine_ai

# ==============================================
# AI SERVICE APIS
# ==============================================
# OpenAI API for AI features
OPENAI_API_KEY=your_openai_api_key

# Google Books API for book data
GOOGLE_BOOKS_API_KEY=your_google_books_api_key

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# JWT secret for additional token signing (if needed)
JWT_SECRET=your_very_long_random_string_for_jwt_signing

# NextAuth.js configuration (if using NextAuth instead of Supabase Auth)
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your_nextauth_secret

# ==============================================
# FRONTEND CONFIGURATION (Next.js)
# ==============================================
# Next.js environment
NODE_ENV=development

# Public URL for the frontend application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Public Supabase configuration for frontend
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_public_key

# ==============================================
# BACKEND CONFIGURATION
# ==============================================
# Backend API URL
API_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# FastAPI specific (if using FastAPI backend)
FAST_API_HOST=localhost
FAST_API_PORT=8000
FAST_API_DEBUG=true

# Express.js specific (if using Express backend)
EXPRESS_PORT=8000
EXPRESS_ENV=development

# ==============================================
# EMAIL SERVICE (Optional)
# ==============================================
# If you need custom email sending (Supabase has built-in email)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_email_password

# ==============================================
# FILE STORAGE (Optional)
# ==============================================
# Supabase Storage bucket names
SUPABASE_STORAGE_BUCKET_AVATARS=avatars
SUPABASE_STORAGE_BUCKET_DOCUMENTS=documents
SUPABASE_STORAGE_BUCKET_UPLOADS=uploads

# AWS S3 (alternative to Supabase Storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=spine-ai-uploads

# ==============================================
# EXTERNAL INTEGRATIONS (Optional)
# ==============================================
# Stripe for payments (if implementing premium features)
# STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google OAuth (if using Google login)
# GOOGLE_CLIENT_ID=your_google_oauth_client_id
# GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# GitHub OAuth (if using GitHub login)
# GITHUB_CLIENT_ID=your_github_oauth_client_id
# GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# ==============================================
# MONITORING & ANALYTICS (Optional)
# ==============================================
# Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn

# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog for product analytics
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
# Enable detailed logging
LOG_LEVEL=debug

# Enable hot reload for development
WATCH_FILES=true

# Database seeding (for development)
SEED_DATABASE=false

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================
# These will be different in production
# NEXT_PUBLIC_APP_URL=https://your-domain.com
# API_URL=https://api.your-domain.com
# NODE_ENV=production
# LOG_LEVEL=error
